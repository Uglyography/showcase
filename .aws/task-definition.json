{
  "family": "showcase-task",
  "executionRoleArn": "arn:aws:iam::864981714248:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "showcase-app",
      "image": "864981714248.dkr.ecr.eu-central-1.amazonaws.com/uglyography/showcase:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_NAME",
          "value": "showcase-db"
      },
      {
          "name": "DB_HOST",
          "value": "showcase-db.cvykgqc2shee.eu-central-1.rds.amazonaws.com"
      },
      {
          "name": "DB_PORT",
          "value": "5432"
      },
      {
          "name": "DB_USER",
          "value": "postgres"
      },
      {
          "name": "DB_PASSWORD",
          "value": "postgres"
      }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/showcase-task",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "cpu": 256,
      "memory": 512
    }
  ]
}